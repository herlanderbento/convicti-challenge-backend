{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "rootDir": "./",
    "baseUrl": "./src",
    "outDir": "./dist",
    "typeRoots": [
      "./src/app/@types",
      "./node_modules/@types"
    ],
    "paths": {
      "@app/*": [
        "app/*"
      ],
      "@config/*": [
        "app/config/*"
      ],
      "@shared/*": [
        "shared/*"
      ],
      "@docs/*": [
        "docs/*"
      ]
    },
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "lib": [
      "es2018",
      "esnext.asynciterable"
    ],
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  }
}